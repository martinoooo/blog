<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="minimum-scale=1, initial-scale=1, width=device-width, shrink-to-fit=no">
  <title>App</title>
  <style>
    body {
      margin: 0;
    }
  </style>
  {{ add_manifest }}
</head>

<body>
  <script>
    (function () {
      const ui = localStorage.getItem('ui') || 'material';
      const path = manifest[ui + '.js'];
      const script = document.createElement('script');
      script.setAttribute('src', path);
      document.body.appendChild(script);
    })()
  </script>
  <div id="app"></div>
  {{ load_js 'vendors.js'}}
</body>

</html>